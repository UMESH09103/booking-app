<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DJ Booking</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Add Particle.js for background effects -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <style>
        body {
            background-image: url('https://images8.alphacoders.com/374/thumb-1920-374816.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            overflow-x: hidden;
        }
        .overlay {
            background-color: rgba(0, 0, 0, 0.7); /* Slightly darker for cleaner look */
            min-height: 100vh;
        }
        .header-gradient {
            background: linear-gradient(to right, #0d9488, #6b7280);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* Softer shadow */
            padding: 0.75rem 0; /* Balanced padding for sleekness */
        }
        .hero-section {
            position: relative;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }
        .hero-content {
            z-index: 10;
            text-align: center;
            max-width: 800px; /* Restrict width for cleaner layout */
        }
        .attractive-heading {
            background: linear-gradient(45deg, #38bdf8, #ffffff); /* Cleaner, simpler gradient */
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            font-size: 4rem; /* Balanced size for elegance */
            font-weight: bold;
            font-family: 'Arial', sans-serif;
            text-shadow: 0 8px 16px rgba(56, 189, 248, 0.4); /* Softer, cleaner shadow */
            animation: fadeInBounce 2s ease-in-out;
            letter-spacing: 1px; /* Reduced for cleaner look */
            text-transform: uppercase;
        }
        @keyframes fadeInBounce {
            0% { opacity: 0; transform: scale(0.9) translateY(30px); }
            50% { transform: scale(1.05) translateY(-5px); }
            100% { opacity: 1; transform: scale(1) translateY(0); }
        }
        .subheading {
            font-size: 1.5rem; /* Cleaner, balanced size */
            color: #a0aec0;
            margin-top: 1.25rem;
            margin-bottom: 2.5rem; /* Increased margin to balance layout without features */
            animation: slideIn 1.5s ease-in-out;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3); /* Softer shadow */
        }
        @keyframes slideIn {
            0% { opacity: 0; transform: translateX(-50px); }
            100% { opacity: 1; transform: translateX(0); }
        }
        .dj-image {
            background: url('/images/dj-placeholder.jpg') no-repeat center center;
            background-size: cover;
            border-radius: 1rem; /* Slightly smaller radius for modern look */
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2); /* Lighter shadow for cleaner appearance */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            width: 100%;
            height: 350px; /* Reduced for balance */
            margin: 2rem auto;
            max-width: 600px; /* Restrict width for cleaner layout */
        }
        .dj-image:hover {
            transform: scale(1.03); /* Subtle scaling */
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
        }
        .pulse-btn {
            background: linear-gradient(to right, #3b82f6, #1d4ed8);
            border-radius: 0.75rem;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3); /* Lighter shadow */
            transition: all 0.3s ease;
            padding: 0.875rem 2rem;
            font-size: 1.125rem; /* Balanced size */
            font-weight: bold;
        }
        .pulse-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 18px rgba(59, 130, 246, 0.5);
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0% { box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3); }
            50% { box-shadow: 0 6px 18px rgba(59, 130, 246, 0.5); }
            100% { box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3); }
        }
        #particles-js {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }
        .parallax {
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
        /* Responsive Design for Cleaner Look */
        @media (max-width: 768px) {
            .header-gradient {
                padding: 0.5rem 0;
            }
            .attractive-heading {
                font-size: 2.5rem;
            }
            .subheading {
                font-size: 1.25rem;
            }
            .pulse-btn {
                padding: 0.75rem 1.5rem;
                font-size: 1rem;
            }
            .dj-image {
                height: 250px;
                max-width: 400px;
            }
        }
        @media (max-width: 480px) {
            .header-gradient {
                padding: 0.25rem 0;
            }
            .attractive-heading {
                font-size: 2rem;
            }
            .subheading {
                font-size: 1rem;
            }
            .pulse-btn {
                padding: 0.625rem 1.25rem;
                font-size: 0.875rem;
            }
            .dj-image {
                height: 200px;
                max-width: 300px;
            }
        }
    </style>
</head>
<body class="bg-gray-900 text-white min-h-screen">
    <div class="overlay flex flex-col min-h-screen">
        <header class="header-gradient p-4 sticky top-0 z-10 shadow-lg">
            <div class="container mx-auto flex justify-between items-center">
                <h1 class="text-xl font-bold text-white transform hover:scale-105 transition duration-300">ðŸŽ§ DJ Booking</h1>
                <div class="flex items-center space-x-4">
                    <% if (user) { %>
                        <a href="/dashboard" class="px-3 py-1 bg-gray-700 text-sm rounded-lg hover:bg-gray-600 transition font-medium">Dashboard</a>
                        <form action="/logout" method="POST">
                            <button class="px-3 py-1 bg-red-500 text-sm rounded-lg hover:bg-red-700 transition font-medium">Logout</button>
                        </form>
                    <% } else { %>
                        <a href="/login" class="px-3 py-1 bg-blue-500 text-sm rounded-lg hover:bg-blue-600 transition font-medium">Login</a>
                        <a href="/register" class="px-3 py-1 bg-green-500 text-sm rounded-lg hover:bg-green-600 transition font-medium">Register</a>
                    <% } %>
                </div>
            </div>
        </header>

        <main class="relative">
            <!-- Particle Background -->
            <div id="particles-js"></div>

            <!-- Hero Section with Parallax -->
            <section class="hero-section parallax">
                <div class="container mx-auto p-8 flex items-center justify-center">
                    <div class="hero-content">
                        <h1 class="attractive-heading mb-6">Welcome to DJ Booking</h1>
                        <p class="subheading mb-12">Unleash the rhythmâ€”find and book the best DJs for your unforgettable events!</p>
                        <div class="flex justify-center space-x-4 mb-16"> <!-- Increased margin to balance layout -->
                            <% if (user) { %>
                                <a href="/dashboard" class="pulse-btn">Explore DJs Now</a>
                            <% } else { %>
                                <a href="/login" class="pulse-btn">Login to Book</a>
                                <a href="/register" class="pulse-btn">Register Now</a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </section>

            <!-- DJ Image Section with Animation -->
            <section class="py-12 bg-gradient-to-b from-black to-gray-900">
                <div class="container mx-auto p-6">
                    <div class="dj-image mx-auto max-w-3xl"></div>
                </div>
            </section>
        </main>

        <footer class="bg-gray-800 p-5 text-center">
            <p class="text-sm">Â© 2025 DJ Booking Service | <a href="#" class="text-blue-400 hover:underline">Contact Us</a></p>
        </footer>
    </div>

    <script>
        // Initialize Particle.js for background effects
        particlesJS("particles-js", {
            "particles": {
                "number": { "value": 80, "density": { "enable": true, "value_area": 800 } },
                "color": { "value": "#38bdf8" },
                "shape": { "type": "circle" },
                "opacity": { "value": 0.5, "random": true },
                "size": { "value": 3, "random": true },
                "line_linked": { "enable": true, "distance": 150, "color": "#38bdf8", "opacity": 0.4, "width": 1 },
                "move": { "enable": true, "speed": 2, "direction": "none", "random": true, "straight": false, "out_mode": "out" }
            },
            "interactivity": {
                "detect_on": "canvas",
                "events": { "onhover": { "enable": true, "mode": "repulse" }, "onclick": { "enable": true, "mode": "push" } },
                "modes": { "repulse": { "distance": 100, "duration": 0.4 } }
            },
            "retina_detect": true
        });
    </script>
</body>
</html>